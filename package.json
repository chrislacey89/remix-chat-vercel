{
  "name": "remix-template-vercel",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "start": "remix-serve build",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "hook": "yarn lint && yarn format:check",
    "cypress:open": "./node_modules/.bin/cypress open",
    "cypress:run:flow": "./node_modules/.bin/cypress run --spec cypress/integration/e2e/$FLOW/_index.spec.ts",
    "cypress:run": "./node_modules/.bin/cypress run",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "format:write": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn hook"
    }
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/api"
  ],
  "dependencies": {
    "@mantine/core": "^4.2.8",
    "@mantine/hooks": "^4.2.8",
    "@mantine/ssr": "^4.2.8",
    "@prisma/client": "^3.15.0",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "@remix-run/server-runtime": "^1.5.1",
    "@types/lru-cache": "^7.10.10",
    "bcryptjs": "^2.4.3",
    "lru-cache": "^7.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.0",
    "@remix-run/eslint-config": "^1.5.0",
    "@remix-run/serve": "^1.5.0",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@vitejs/plugin-react": "^1.3.2",
    "c8": "^7.11.3",
    "cypress": "^10.0.2",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "happy-dom": "^3.2.1",
    "husky": "^4.3.8",
    "jest": "^28.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.5.5",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.12.6"
  },
  "engines": {
    "node": ">=14"
  }
}
